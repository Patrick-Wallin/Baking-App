<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <fragment
        android:name="com.example.android.bakingapp.RecipeDetailActivityFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/recipe_details_fragment"
        android:layout_weight="45">
    </fragment>
    <fragment
        android:name="com.example.android.bakingapp.RecipeDetailStepInstructionActivityFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/recipe_steps_fragment"
        android:layout_weight="55">
    </fragment>
</LinearLayout>